<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">


    <TextView
        android:id="@+id/detail_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_title"
        android:textSize="16sp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/detail_txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text_describe text_describetext_describetext_describetext_describetext_describetext_describe"
        android:textSize="14sp"
        android:textAlignment="viewEnd"
        android:layout_toEndOf="@+id/detail_txt_title"
        android:layout_marginStart="10dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>